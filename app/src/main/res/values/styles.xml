<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeLight" parent="Theme.JavaAndroid1Calculator">
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:backgroundTint">@color/light_color_theme</item>
        <item name="strokeColor">@color/stroke_color_light</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="ThemeDark" parent="Theme.JavaAndroid1Calculator">
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:backgroundTint">@color/dark_color_theme</item>
        <item name="strokeColor">@color/stroke_color_dark</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

</resources>